{
    "compilerOptions": {
        "baseUrl": "src",
        "target": "ES2017",
        "module": "ES2015",
        "lib": [
            "ES2017",
            "ES2020.BigInt",
            "DOM"
        ],
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist/mjs"
    },
    "include": [
        "src/**/*"
    ]
}